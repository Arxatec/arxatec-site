---
import AboutSection from "../../components/pages/home/about-section/index.astro";
import BlogSection from "../../components/pages/home/blog-section/index.astro";
import CtaSection from "../../components/pages/shared/cta-section/index.astro";
import FeaturesSection from "../../components/pages/home/features-section/index.astro";
import HeroSection from "../../components/pages/home/hero-section/index.astro";
import PricingSection from "../../components/pages/shared/pricing-section/index.astro";
import QaSection from "../../components/pages/shared/qa-section/index.astro";
import Footer from "../../components/pages/shared/footer/index.astro";
import Header from "../../components/pages/shared/header/index.astro";
import Layout from "../../layouts/Layout.astro";
import { languageList, useTranslations } from "../../i18n/";
import { assets } from "../../utils";
const currentLang = Astro.currentLocale || "qu";

const translateLabels = useTranslations(
  currentLang as keyof typeof languageList,
);

const structuredData = {
  "@context": assets.seo.context,
  "@type": assets.seo.type,
  name: translateLabels("seo.home.title"),
  url: translateLabels("seo.home.canonical"),
  description: translateLabels("seo.home.description"),
  publisher: {
    "@type": assets.seo.type_publisher,
    name: assets.seo.name,
    logo: assets.seo.logo_url,
  },
};
---

  <Layout
    title={translateLabels("seo.home.title")}
    description={translateLabels("seo.home.description")}
    keywords={translateLabels("seo.home.keywords")}
    canonical={translateLabels("seo.home.canonical")}
    image={assets.seo.image_og}
    type={assets.seo.type.toLowerCase()}
    robots={assets.seo.robots}
    structuredData={structuredData}
  >
  <Header />
  <HeroSection />
  <AboutSection />
  <FeaturesSection />
  <PricingSection />
  <QaSection />
  <BlogSection />
  <CtaSection />
  <Footer />
</Layout>
