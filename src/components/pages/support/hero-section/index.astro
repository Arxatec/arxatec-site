---
import { languageList, useTranslations } from "../../../../i18n/";
import MagnifyingGlass from "astro-heroicons/outline/MagnifyingGlass.astro";
import { assets } from "../../../../utils/assets.utilities.ts";
const currentLang = Astro.currentLocale || "es";

const translateLabels = useTranslations(
  currentLang as keyof typeof languageList,
);
---

<section class="p-4 relative z-10">
  <div
    class="relative w-full h-auto overflow-hidden rounded-lg flex items-end justify-center"
  >
    <img
      src={assets.support.hero.banner}
      alt="Un abogado en su oficina"
      class="w-full h-full object-cover absolute z-[-1] top-0 left-0 overflow-hidden object-center"
      loading="lazy"
    />
    <div class="w-full h-full absolute inset-0 bg-black/70" aria-hidden="true">
    </div>
    <div
      class="relative z-20 w-full max-w-7xl mx-auto py-44 px-6 lg:px-8 flex items-end justify-between"
    >
      <div class="max-w-2xl mx-auto">
        <h2 class="lg:text-4xl text-2xl text-white font-bold mt-8 text-center">
          {translateLabels("support.hero.title")}
        </h2>
        <p class="lg:text-lg text-sm text-white/60 lg:mt-4 mt-2 text-center">
          {translateLabels("support.hero.description")}
        </p>
        <div class="w-full flex items-center gap-2 mt-8 px-8 relative">
          <div class="relative w-full flex">
            <MagnifyingGlass
              class="size-5 text-white/60 absolute z-20 right-4 top-0 bottom-0 my-auto"
              stroke-width={2}
            />
            <input
              id="search"
              name="search"
              type="text"
              autocomplete="search"
              required
              class="min-w-0 flex-auto rounded-md bg-white/15 backdrop-blur-lg px-3.5 py-2 text-sm text-white outline outline-1 -outline-offset-1 outline-white/15 placeholder:text-white/60 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-white sm:text-sm/6 z-10 relative pr-9"
              placeholder={translateLabels("support.hero.input.placeholder")}
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
