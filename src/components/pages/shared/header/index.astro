---
import Header from ".";
import { languageList, useTranslations } from "../../../../i18n/";
const currentLang = Astro.currentLocale || "es";

const translateLabels = useTranslations(
  currentLang as keyof typeof languageList
);

const headerProps = {
  banner: translateLabels("shared.header.banner"),
  nav: {
    product: translateLabels("shared.header.option.product"),
    plan: translateLabels("shared.header.option.plan"),
    blog: translateLabels("shared.header.option.blog"),
    support: translateLabels("shared.header.option.support"),
  },
  actions: {
    login: translateLabels("shared.header.login"),
    register: translateLabels("shared.header.register"),
  },
};
---

<Header headerProps={headerProps} client:load />
