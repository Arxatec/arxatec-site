---
import Check from "astro-heroicons/outline/Check.astro";
import { languageList, useTranslations } from "../../../../i18n/";
const currentLang = Astro.currentLocale || "es";

const translateLabels = useTranslations(
  currentLang as keyof typeof languageList
);
---

<div class="py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="bg-white shadow-sm rounded-xl p-6">
      <div class="max-w-4xl text-center">
        <h2 class="text-base font-semibold text-blue-600 text-left">
          {translateLabels("home.pricing.tag")}
        </h2>
        <p
          class="mt-2 text-balance text-left text-4xl font-semibold tracking-tight text-gray-900 sm:text-4xl font-robotoSlab"
        >
          {translateLabels("home.pricing.title")}
        </p>
      </div>
      <p
        class="mt-6 max-w-2xl text-pretty text-left text-base font-medium text-gray-600"
      >
        {translateLabels("home.pricing.description")}
      </p>
    </div>

    <div class="bg-white shadow-sm rounded-xl mt-2 p-6">
      <div
        class="isolate mx-auto grid max-w-md grid-cols-1 gap-8 lg:mx-0 lg:max-w-none lg:grid-cols-3"
      >
        <div class="rounded-3xl p-8 ring-1 ring-gray-200 xl:p-10">
          <div class="flex items-center justify-between gap-x-4">
            <h3
              id="tier-freelancer"
              class="text-lg/8 font-semibold text-gray-900"
            >
              {translateLabels("home.pricing.free.title")}
            </h3>
          </div>
          <p class="mt-4 text-sm/6 text-gray-600">
            {translateLabels("home.pricing.free.description")}
          </p>
          <p class="mt-6 flex items-baseline gap-x-1">
            <span class="text-4xl font-semibold tracking-tight text-gray-900"
              >$

              {translateLabels("home.pricing.free.price")}
            </span>
            <span class="text-sm/6 font-semibold text-gray-600"
              >/ {translateLabels("home.pricing.month")}</span
            >
          </p>
          <a
            href="#"
            aria-describedby="tier-freelancer"
            class="mt-6 block rounded-md px-3 py-2 text-center text-sm/6 font-semibold text-blue-600 ring-1 ring-inset ring-blue-200 hover:ring-blue-300 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600"
          >
            {translateLabels("home.pricing.startFree")}
          </a>
          <ul
            role="list"
            class="mt-8 space-y-3 text-sm/6 text-gray-600 xl:mt-10"
          >
            <li class="flex gap-x-3">
              <Check class="size-5 text-blue-600" stroke-width={2} />
              {translateLabels("home.pricing.free.features.1")}
            </li>
            <li class="flex gap-x-3">
              <Check class="size-5 text-blue-600" stroke-width={2} />

              {translateLabels("home.pricing.free.features.2")}
            </li>
            <li class="flex gap-x-3">
              <Check class="size-5 text-blue-600" stroke-width={2} />
              {translateLabels("home.pricing.free.features.3")}
            </li>
            <li class="flex gap-x-3">
              <Check class="size-5 text-blue-600" stroke-width={2} />
              {translateLabels("home.pricing.free.features.4")}
            </li>
          </ul>
        </div>
        <div class="rounded-3xl p-8 ring-2 ring-blue-600 xl:p-10">
          <div class="flex items-center justify-between gap-x-4">
            <h3 id="tier-startup" class="text-lg/8 font-semibold text-blue-600">
              {translateLabels("home.pricing.basic.title")}
            </h3>
            <p
              class="rounded-full bg-blue-600/10 px-2.5 py-1 text-xs/5 font-semibold text-blue-600"
            >
              {translateLabels("home.pricing.popular")}
            </p>
          </div>
          <p class="mt-4 text-sm/6 text-gray-600">
            {translateLabels("home.pricing.basic.description")}
          </p>
          <p class="mt-6 flex items-baseline gap-x-1">
            <span class="text-4xl font-semibold tracking-tight text-gray-900"
              >$
              {translateLabels("home.pricing.basic.price")}
            </span>
            <span class="text-sm/6 font-semibold text-gray-600"
              >/ {translateLabels("home.pricing.month")}</span
            >
          </p>
          <a
            href="#"
            aria-describedby="tier-startup"
            class="mt-6 block rounded-md bg-blue-600 px-3 py-2 text-center text-sm/6 font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600"
          >
            {translateLabels("home.pricing.buy")}
          </a>
          <ul
            role="list"
            class="mt-8 space-y-3 text-sm/6 text-gray-600 xl:mt-10"
          >
            <li class="flex gap-x-3">
              <Check class="size-5 text-blue-600" stroke-width={2} />
              {translateLabels("home.pricing.basic.features.1")}
            </li>
            <li class="flex gap-x-3">
              <Check class="size-5 text-blue-600" stroke-width={2} />
              {translateLabels("home.pricing.basic.features.2")}
            </li>
            <li class="flex gap-x-3">
              <Check class="size-5 text-blue-600" stroke-width={2} />
              {translateLabels("home.pricing.basic.features.3")}
            </li>
            <li class="flex gap-x-3">
              <Check class="size-5 text-blue-600" stroke-width={2} />
              {translateLabels("home.pricing.basic.features.4")}
            </li>
          </ul>
        </div>
        <div class="rounded-3xl p-8 ring-1 ring-gray-200 xl:p-10">
          <div class="flex items-center justify-between gap-x-4">
            <h3
              id="tier-enterprise"
              class="text-lg/8 font-semibold text-gray-900"
            >
              {translateLabels("home.pricing.premium.title")}
            </h3>
          </div>
          <p class="mt-4 text-sm/6 text-gray-600">
            {translateLabels("home.pricing.premium.description")}
          </p>
          <p class="mt-6 flex items-baseline gap-x-1">
            <!-- Price, update based on frequency toggle state -->
            <span class="text-4xl font-semibold tracking-tight text-gray-900"
              >$

              {translateLabels("home.pricing.premium.price")}
            </span>
            <!-- Payment frequency, update based on frequency toggle state -->
            <span class="text-sm/6 font-semibold text-gray-600"
              >/ {translateLabels("home.pricing.month")}</span
            >
          </p>
          <a
            href="#"
            aria-describedby="tier-enterprise"
            class="mt-6 block rounded-md px-3 py-2 text-center text-sm/6 font-semibold text-blue-600 ring-1 ring-inset ring-blue-200 hover:ring-blue-300 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600"
          >
            {translateLabels("home.pricing.buy")}
          </a>
          <ul
            role="list"
            class="mt-8 space-y-3 text-sm/6 text-gray-600 xl:mt-10"
          >
            <li class="flex gap-x-3">
              <Check class="size-5 text-blue-600" stroke-width={2} />
              {translateLabels("home.pricing.premium.features.1")}
            </li>
            <li class="flex gap-x-3">
              <Check class="size-5 text-blue-600" stroke-width={2} />
              {translateLabels("home.pricing.premium.features.2")}
            </li>
            <li class="flex gap-x-3">
              <Check class="size-5 text-blue-600" stroke-width={2} />
              {translateLabels("home.pricing.premium.features.3")}
            </li>
            <li class="flex gap-x-3">
              <Check class="size-5 text-blue-600" stroke-width={2} />
              {translateLabels("home.pricing.premium.features.4")}
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
