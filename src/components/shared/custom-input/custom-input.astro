---
const {
  name = "",
  type = "text",
  id = Date.now().toString(),
  className = "",
  placeholder = "",
  required = false,
  label,
} = Astro.props;
---

<div>
  {
    label && (
      <label for={id} class="block text-sm/6 font-medium text-gray-900">
        {label}
      </label>
    )
  }
  <div class={label ? "mt-2" : "mt-0"}>
    <input
      type={type}
      name={name}
      id={id}
      class={`block rounded-md bg-white px-3 py-1.5 text-sm text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-blue-600 sm:text-sm/6  ${className}`}
      placeholder={placeholder}
      required={required}
    />
  </div>
</div>
