---
import HeroBackground from "./background/index.astro";
import HeroContent from "./content/index.astro";

interface Props {
  title: string;
  description: string;
  image: string;
  buttonText: string;
  buttonLink: string;
}

const { title, description, image, buttonText, buttonLink } =
  Astro.props as Props;
---

<section
  class="relative flex flex-col items-center text-center mx-auto rounded-2xl overflow-hidden my-6 w-full h-[400px] md:w-full md:max-w-[1220px] md:h-[600px] lg:h-[810px] px-4 md:px-0"
>
  <HeroBackground />
  <HeroContent
    title={title}
    description={description}
    image={image}
    buttonText={buttonText}
    buttonLink={buttonLink}
  />
</section>
